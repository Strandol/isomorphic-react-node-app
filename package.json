    "react-dom": "^16.4.2",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.6.1",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0",
    "just-wait": "^1.0.11",
    "nodemon": "^1.18.3",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "test": "jest",
    "build:client": "webpack --config ./config/webpack.client.js --mode=development",
    "build:server": "webpack --config ./config/webpack.server.js --mode=development",
    "watch:server": "webpack --watch --config ./config/webpack.server.watch.js",
    "start:server": "just-wait --pattern \"build/*.js\" && nodemon ./build/server.js",
    "watch:client": "webpack --watch --config ./config/webpack.client.js --mode development",
    "start:all": "concurrently --kill-others \"npm run watch:server\" \"npm run start:server\" \"npm run watch:client\""
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/jest.config.js"
    ]
  },
